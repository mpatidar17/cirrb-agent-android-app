<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >



    <!-- main color -->

    <item
        android:bottom=".5dp"
        android:left=".5dp"
        android:right=".5dp">

