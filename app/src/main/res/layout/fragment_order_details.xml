<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/cnfrm_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cnfrm_order_msg" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cnfrm_msg"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapati"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1.0"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/order_price_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="SR"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="20dp"
                android:text="20.0"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

        </LinearLayout>


        <EditText
            android:id="@+id/edt_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_ordder"
            android:background="@drawable/edit_text_two"
            android:hint="@string/txt_coupon"
            android:padding="5dp" />

        <LinearLayout
            android:id="@+id/layout_ordder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_confrm"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_total_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_total_order"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_dlevry_chrg_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="@string/txt_delvry_chrges"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_grand_total_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="@string/txt_grand_total"
                    android:textColor="@color/colorButton"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_total_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SR"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_dlevry_chrg_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SR"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_grand_total_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SR"
                    android:textColor="@color/colorButton"

                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.0"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_dlevry_chrg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_grand_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24.0"
                    android:textColor="@color/colorButton"
                    android:textSize="20dp" />


            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_confrm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorButton"
            android:text="@string/txt_confirm"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

    </RelativeLayout>
</RelativeLayout>